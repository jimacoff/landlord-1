<h1>Users</h1>
<ul>
  <% @current_account.memberships.each do |m| %>
    <li>
      <%= m.role %>: <%= m.user.name %>
      <%= link_to 'Edit', edit_account_user_path(current_account, m.user) %> | 
      <%= link_to 'Delete', account_user_path(current_account, m.user), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= form_tag account_users_path(@current_account), method: :create do %>
  <div class="form-group">
    <%= text_area_tag :email_addresses, nil, rows: 10, class: 'form-control', placeholder: 'user@example.com', required: true %>
  </div>

  <div class="form-group">
    <%= label_tag :role_id, "Role", class: 'control-label' %>
    <%= select_tag :role_id, options_for_select(@roles.collect {|r| [r[:name], r[:id]]}) %>
  </div>

  <div class="form-group">
    <%= submit_tag 'Invite users', class: 'btn btn-primary' %>
  </div>
<% end %>