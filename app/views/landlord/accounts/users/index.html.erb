<h1>Users</h1>
<ul>
  <% @current_account.users.each do |user| %>
    <li>
      <% if @current_account.owner == user %>(Owner)<% end %>
      <%= user.name %>
    </li>
  <% end %>
</ul>

<%= form_tag account_new_users_path(@current_account) do %>
  <div class="form-group">
    <%= text_area_tag 'email_addresses', nil, rows: 10, class: 'form-control', placeholder: 'user@example.com', required: true %>
  </div>

  <div class="form-group">
    <%= submit_tag 'Invite users', class: 'btn btn-primary' %>
  </div>
<% end %>